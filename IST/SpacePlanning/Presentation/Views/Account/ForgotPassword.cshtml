@model IST.SpacePlanning.Presentation.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="card-container">
    <div class="card-header col-md-12 text-center">
        <strong>@ViewData["Title"]</strong>
    </div>
    <div class="card col-sm-12">
        <br />
        <div class="text-center">
            <span>Please enter the email associated with your account.</span>
        </div>
        <br />
        <form class="form-signin" method="post" asp-controller="Account" asp-action="ForgotPasswordConfirmation">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label for="inputUserName" class="col-sm-5 col-form-label">Email address:</label>
                <div class="col-form-input col-sm-12">
                    <span id="reauth-user" class="reauth-email"></span>
                    <input type="text" class="form-control" id="inputUserName" asp-for="Email" placeholder="Enter email..." required autofocus>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="text-danger">
                                @Model.ErrorMessage
                            </div>
                        }
                </div>
            </div>
            <br />
            <br />
            <div class="row form-submit">
                <div class="btn-login-container col-sm-12">
                    <button type="submit" class="btn btn-lg btn-primary btn-block btn-signin">Send Reset Link</button>
                </div>
            </div>
        </form>
    </div>
</div>